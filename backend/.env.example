# Application
APP_NAME=wanLLMDB
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://wanllmdb:password@localhost:5432/wanllmdb
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin users (for audit log access and other admin operations)
# Comma-separated list of admin usernames
ADMIN_USERS=admin,tech_lead

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# MinIO / S3
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=wanllmdb
MINIO_SECURE=False

# TimescaleDB
TIMESCALE_URL=postgresql://wanllmdb:password@localhost:5432/wanllmdb_metrics
